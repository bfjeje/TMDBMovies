<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MovieDetailActivity">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/poster_detail"
            android:layout_width="200dp"
            android:layout_height="320dp"
            android:layout_marginEnd="4dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/poster_description" />

        <TextView
            android:id="@+id/title_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/poster_detail"
            android:layout_alignTop="@id/poster_detail"/>

        <TextView
            android:id="@+id/date_detail"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_detail"
            android:layout_toEndOf="@id/poster_detail"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_genres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/poster_detail"
            android:layout_below="@id/date_detail"/>

        <TextView
            android:id="@+id/overview_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/poster_detail"
            android:layout_below="@id/recyclerview_genres"/>

    </RelativeLayout>

</ScrollView>
